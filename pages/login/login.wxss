page {
    background: #fff;
}

.login-title {
    height: 56rpx;
    font-size: 40rpx;
    font-weight: 550;
    color: rgba(74, 74, 74, 1);
    line-height: 56rpx;
    margin-bottom: 10px;
}

.login-text {
    height: 40rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(204, 204, 204, 1);
    line-height: 40rpx;
}

.form-input {
    margin: 40px auto 90px;
}

.login-input {
    width: 500rpx;
    height: 50rpx;
    line-height: 50rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 8rpx;
    border: 2px solid rgba(222, 186, 85, 1);
    margin: 20rpx 0;
    padding: 30rpx;
    font-size: 28rpx;
}

.checkout {
    width: 568rpx;
    height: 50rpx;
    line-height: 50rpx;
    display: flex;
    border-radius: 8rpx 0 0 8rpx;
    margin: 20rpx 0;
}

.login-pwd {
    width: 360rpx;
    height: 50rpx;
    line-height: 50rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 8rpx 0 0 8rpx;
    border: 2px solid rgba(222, 186, 85, 1);
    padding: 30rpx;
    font-size: 28rpx;
}

.checkout view {
    width: 210rpx;
    height: 62rpx;
    line-height: 62rpx;
    text-align: center;
    padding: 30rpx 0;
    background: rgba(220, 174, 38, 1);
    border-radius: 0rpx 8rpx 8rpx 0rpx;
    color: #fff;
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
}

.submit {
    width: 500rpx;
    height: 88rpx;
    line-height: 88rpx;
    background: linear-gradient(316deg, rgba(241, 195, 66, 1) 0%, rgba(255, 227, 94, 1) 100%);
    box-shadow: 0px 8px 14px 0px rgba(191, 159, 35, 0.15);
    border-radius: 50rpx;
    color: #fff;
    box-sizing: inherit;
    font-size: 32rpx;
}