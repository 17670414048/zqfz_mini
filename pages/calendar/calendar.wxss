/* pages/calendar/calendar.wxss *//* pages/calendar/calendar.wxss */
  .days-table {
    flex-wrap: wrap;
    align-content: flex-start;
  }
  .calendar{
      width: 100%;
    position: absolute;
    z-index:10000;
    background: linear-gradient(316deg, rgba(241, 195, 66, 1) 0%, rgba(255, 227, 94, 1) 100%);

    
  }
  .grid {
    width: 107.14rpx;
    height: 100rpx;
    text-align: center;
    line-height: 120rpx;
    font-size:.9rem;
    color:#fff;
  }
  .today {
    color: #88a1fd;
  }
  .grid view {
    height:85rpx;
    line-height: 85rpx;
    width:85rpx;
    margin: 0 auto;
  }
  .grid .dot{
    width:12rpx;
    height:12rpx;
    background:rgba(255,255,255,1);
    border-radius: 100%;
    display:block;
margin:0 auto
 }
  .choice view{
      width: 80rpx;
      height: 80rpx;
    border-radius: 24rpx;
    background: #fff;
    background-position:center;
    color: #D0A02F;
    margin-bottom: 5rpx;
  }
  /* 非本月日期 */
  .notCurrent {
    color: silver;
    visibility: hidden;
  }
  .day-hover {
    background: red;
  }
  .swpier-box {
    height: 600rpx;
    width: 100%;
  }
  .arrow {
    width: 48rpx;
    padding: 10rpx 26rpx;
    height: 48rpx;
    color: #fff;
    text-align: center;
  }
  .year-and-month{
    color: #fff;
  }
  .year-and-month view{
    height:66rpx;
font-size:48rpx;
color:rgba(255, 255, 255, 1);
line-height:66rpx;

  }
  .month{
    background:linear-gradient(270deg, rgba(247, 209, 79,1) 0%, rgba(255, 227, 94, 1) 100%);
    height: 66rpx;
    padding-top:35rpx;
  }
  .flex {
    display: flex;
  }
  /* 轴向 */
  .column {
    flex-direction: column;
  }
  /* 主轴方向 */
  .m-start {
    justify-content: flex-start;
  }
  
  .m-end {
    justify-content: flex-end;
  }
  
  .m-around {
    justify-content: space-around;
  }
  .m-between {
    justify-content: space-between;
  }
  .m-center {
    justify-content: center;
  }
  /* 侧轴方向 */
  .s-start {
    align-items: flex-start;
  }
  .s-end {
    align-items: flex-end;
  }
  
  .s-around {
    align-items: space-around;
  }
  .s-between {
    align-items: space-between;
  }
  .s-center {
    align-items: center;
  }
