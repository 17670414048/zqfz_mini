/* pages/mycoursecallname/mycoursecallname.wxss */

page {
    background: #F9F9FA;
}

.wraper {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
}

.mtop {
    flex: 0 0 100rpx;
    margin-bottom: 30rpx;
}

.info {
    background: #fff;
    padding: 30rpx 40rpx;
}

.info-course {
    height: 64rpx;
    font-size: 34rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(74, 74, 74, 1);
    line-height: 64rpx;
}

.info-time {
    height: 34rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(150, 150, 150, 1);
    line-height: 34rpx;
    margin-bottom: 20rpx;
}

.i {
    height: 64rpx;
    font-size: 30rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(150, 150, 150, 1);
    line-height: 64rpx;
}

.three {
    margin-top: 20rpx;
}

.three-i {
    width: 140rpx;
    height: 52rpx;
    border-radius: 8rpx;
    margin-right: 40rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    line-height: 52rpx;
    padding: 6rpx 20rpx;
}

.one {
    border: 2rpx solid rgba(242, 92, 98, 1);
    color: rgba(242, 92, 98, 1);
}

.two {
    border: 2rpx solid rgba(200, 149, 41, 1);
    color: rgba(200, 149, 41, 1);
}

.thr {
    border: 2rpx solid rgba(92, 131, 242, 1);
    color: rgba(92, 131, 242, 1);
}

.mcenter {
    flex: 1;
    position: relative;
}

.main-scroll {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
}

.main-list {
    position: relative;
    background: #ffff;
    padding: 10rpx 40rpx;
}

.lists {
    padding: 34rpx 0;
    border-bottom: 2rpx solid #F4F5F7;
}
.lists:last-child{
  border-bottom: 0;
}

.select_icon {
    width: 44rpx;
    height: 44rpx;
    border-radius: 100%;
}

.text {
    height: 56rpx;
    line-height: 56rpx;
    margin: 0 20rpx;
    font-size: 30rpx;
    flex: 1;
}

.item_container {
    height: 56rpx;
    line-height: 56rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.select-index1 {
    display: inline-block;
    width: 88rpx;
    height: 52rpx;
    border-radius: 8rpx;
    border: 2rpx solid rgba(200, 149, 41, 1);
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(200, 149, 41, 1);
    line-height: 52rpx;
    text-align: center;
}
.select-index2{
    display: inline-block;
    width: 88rpx;
    height: 52rpx;
    border-radius: 8rpx;
    border: 2rpx solid rgba(242, 92, 98, 1);
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(242, 92, 98, 1);
    line-height: 52rpx;
    text-align: center;
}
.select-index3{
    display: inline-block;
    width: 88rpx;
    height: 52rpx;
    border-radius: 8rpx;
    border: 2rpx solid rgba(92, 131, 242, 1);
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(92, 131, 242, 1);
    line-height: 52rpx;
    text-align: center;
}

.mfooter {
    /* background: rgb(8, 117, 94); */
    color: #fff;
    line-height: 100rpx;
    flex: 0 0 100rpx;
    /* 不放大不缩小固定100rpx */
    height: 100rpx;
    background: linear-gradient(314deg, rgba(241, 195, 66, 1) 0%, rgba(255, 227, 94, 1) 100%);
    box-shadow: 0px 2px 4px 0px rgba(155, 170, 194, 0.09);
    display: flex;
    flex-direction: row;
    width: 100%;
}

.yellow {
    background: linear-gradient(314deg, rgba(241, 195, 66, 1) 0%, rgba(255, 227, 94, 1) 100%);
    box-shadow: 0px 2px 4px 0px rgba(155, 170, 194, 0.09);
}

.gray {
    background: rgba(194, 197, 201, 1);
    box-shadow: 0px 4px 8px 0px rgba(155, 170, 194, 0.09);
}

.f {
    flex: 1;
    text-align: center;
    height: 100rpx;
    font-size: 32rpx;
    font-weight: 550;
    color: rgba(91, 79, 76, 1);
    line-height: 100rpx;
    letter-spacing: 4rpx;
}

.yellow .f, .gray .f {
    color: #fff;
}

.gray_text {
  color: #999999;
}

.over {
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}