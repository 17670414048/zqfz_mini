}

/* 日期圆圈标记 */

.day-circle {
  border: 1rpx solid #88d2ac;
  box-sizing: border-box;
}

.border-radius {
  border-radius: 50%;
  position: relative;
  left: 0;
  top: 0;
}

/* 日期选中 */

.day-choosed-bg {
  /* background-color: #ff629a; */
  background:rgba(223,176,36,1);
  transition: all 0.3s;
  animation-name: choosed;
  animation-duration: 0.5s;
  animation-timing-function: linear;
  animation-iteration-count: 1;
}
.day-choosed-bg.day.ifClick {
  width:64rpx;
height:64rpx;
background:rgba(245,248,251,1);
border-radius:6px;
}
@keyframes choosed {
  from {
    transform: scale(1);
  }

  50% {
    transform: scale(0.9);
  }

  to {
    transform: scale(1);
  }
}
